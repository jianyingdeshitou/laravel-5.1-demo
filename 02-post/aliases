
DEVC=srv_dev_1
PHPC=srv_php_1
WEBC=srv_web_1
DBC=srv_db_1

alias php='docker exec -it $DEVC php'
alias phpunit='php /app/vendor/bin/phpunit --colors'
alias phpspec='php /app/vendor/bin/phpspec'

alias composer='docker exec -it $DEVC composer'
alias cps='docker exec -it $DEVC composer'
alias cps-dal='cps dump-autoload'

alias artisan='docker exec $DEVC php artisan'
alias ats='docker exec $DEVC php artisan'
alias ats-mgt='ats migrate'

alias nginx='docker exec $WEBC nginx'

alias mysql='docker exec -it $DBC mysql -uroot'

